@model AHCMS.Models.LoginViewModel
@{
    ViewBag.Title = "DoctorProfile";
    ViewBag.BodyClass = "panel-access";
    Layout = "~/Views/Shared/_User.cshtml";
}

@section scripts{
    <script src="~/Angular/Controller/LoginController.js"></script>
    <script src="~/Angular/Service/AuthenticationService.js"></script>
}
<div ng-controller="loginController">
    <!--Login-->
    <div class="login">
        <div class="container">
            <div class="login-form">
                <div class="data-form">
                    <!--Logo-->
                    <div>
                        <a href="index.html" class="logo"><img src="~/asset/img/logo-login.svg" alt="logo" class="img-responsive"></a>
                    </div>
                    <!--Logo-->
                    <!--Form-->
                    <form class="form-login" method="post" @*action="@Url.Action("PatientLogin", "Account")"*@>

                        <input type="hidden" value="Patient" id="UserType" name="UserType" />
                        <input type="hidden" value="Patient" id="Role" name="Role" />
                        <div class="icon-data">
                            <i class="fa fa-user-circle"></i>
                        </div>
                        <input type="text" placeholder="Email" name="Email" id="Email" ng-model="Email">
                        <div class="icon-data">
                            <i class="fa fa-key"></i>
                        </div>
                        <input type="password" placeholder="Password" name="Password" id="Password" ng-model="Password">
                        <input type="submit" class="btn btn-primary" role="button" ng-click="ValidatePatient()" value="Login" />
                    </form>
                    <!--Form-->
                    <span class="help">
                        <a id="forgotLink" href="" ng-click="openModal('#forgot')">Forgot Password?</a>
                        <a href="#" class="help-link">Create a new account</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="forgot" class="modal fade book-an-appointment" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Forgot Password</h4>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="row">
                            <p>Enter your email address here</p>
                            <div class="col-sm-12">
                                <input type="email" placeholder="Email" id="Email1" name="Email" ng-model="ForgotEmail">
                            </div>
                        </div>

                        <div class="row">
                            <p>Enter your Username here</p>
                            <div class="col-sm-12">
                                <input type="text" placeholder="Username" id="Username" name="Username" ng-model="ForgotUsername">
                            </div>
                        </div>

                        <input type="submit" class="btn btn-green btn-xsmall" ng-click="ForgotPassword_Patient()" value="confirm" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
</div>