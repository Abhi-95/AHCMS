
@{
    ViewBag.Title = "PatientSignUp";
    Layout = "~/Views/Shared/_User.cshtml";
}


<div class="login">
    <div class="container">
        <div class="register-form">
            <!--Data form-->
            <div class="data-form">
                <span class="back-to-login">
                    <a class="btn btn-green btn-xsmall" href="login.html"><i class="fa fa-angle-double-left"></i> Back to Login</a>
                </span>
                <!--Logo-->
                <a href="#" class="logo"><img src="~/asset/img/logo-simple.png" alt="logo"></a>
                <!--Logo-->
                <!--Form-->
                <div class="form-login">
                    <form>
                        <!--Personal Information-->
                        <div class="row">
                            <h3>Personal Information</h3>
                            <div class="datapos">
                                <!--first name-->
                                <div class="icon-data">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" placeholder="First Name" tabindex="1">
                                <!--first name-->
                                <!--last name-->
                                <div class="icon-data">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" placeholder="Last Name" tabindex="3">
                                <!--last name-->
                                <!--phone-->
                                <div class="icon-data">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input type="number" placeholder="Your Phone" tabindex="5">
                                <!--phone-->
                                <!--gender-->
                                <div class="icon-data">
                                    <i class="fa fa-venus-mars"></i>
                                </div>
                                <select tabindex="7">
                                    <option>Select a Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                                <!--gender-->
                            </div>
                            <div class="datapos">
                                <!--Middle name-->
                                <div class="icon-data">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" placeholder="Middle Name" tabindex="2">
                                <!--Middle name-->
                                <!--Email-->
                                <div class="icon-data">
                                    <i class="fa fa-envelope"></i>
                                </div>
                                <input type="email" placeholder="Email" tabindex="4">
                                <!--Email-->
                                <!--Birhtdate-->
                                <div class="icon-data">
                                    <i class="fa fa-calendar-alt"></i>
                                </div>
                                <input type="date" placeholder="dd/mm/yyyy" tabindex="6">
                                <!--Birthdate-->
                                <!--Bloodgroup-->
                                <div class="icon-data">
                                    <i class="fa fa-tint"></i>
                                </div>
                                <select tabindex="8">
                                    <option>Select a Blood Group</option>
                                    <option>A+</option>
                                    <option>A-</option>
                                    <option>AB+</option>
                                    <option>AB-</option>
                                    <option>B+</option>
                                    <option>B-</option>
                                    <option>O+</option>
                                    <option>O-</option>
                                </select>

                                <!--Bloodgroup-->
                            </div>
                        </div>
                        <!--Personal Information-->
                        <!--Address Information-->
                        <div class="row">
                            <h3>Address Information</h3>
                            <div class="datapos">
                                <!--street-->
                                <div class="icon-data">
                                    <i class="fa fa-road"></i>
                                </div>
                                <input type="text" placeholder="Street" tabindex="9">
                                <!--street-->
                                <!--city-->
                                <div class="icon-data">
                                    <i class="fa fa-street-view"></i>
                                </div>
                                <input type="text" placeholder="State" tabindex="11">
                                <!--city-->
                                <!--city-->
                                <div class="icon-data">
                                    <i class="fa fa-map-marker-alt"></i>
                                </div>
                                <input type="text" placeholder="ZipCode" tabindex="13">
                                <!--city-->
                            </div>
                            <div class="datapos">
                                <!--city-->
                                <div class="icon-data">
                                    <i class="fa fa-building"></i>
                                </div>
                                <input type="text" placeholder="City" tabindex="10">
                                <!--city-->
                                <!--city-->
                                <div class="icon-data">
                                    <i class="fa fa-globe-asia"></i>
                                </div>
                                <input type="text" placeholder="Country" tabindex="12">
                                <!--city-->
                            </div>
                        </div>
                        <!--Address Information-->
                        <!--Data Information-->
                        <div class="row">
                            <h3>Data Information</h3>
                            <div class="datapos">
                                <!--Last name-->
                                <div class="icon-data">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" placeholder="Username">
                                <!--Last name-->
                                <!--number document-->
                                <div class="icon-data">
                                    <i class="fa fa-user-circle"></i>
                                </div>
                                <input type="password" placeholder="Confirm Password">
                                <!--number document-->
                                <!--Avatar Profile-->
                                <div class="avatar-profile">
                                    <label>Image Profile</label>
                                    <input type="file" name="pic" accept="image/*">
                                </div>
                                <!--Avatar Profile-->
                            </div>
                            <div class="datapos">
                                <!--Alternative phone-->
                                <div class="icon-data">
                                    <i class="fa fa-user-circle"></i>
                                </div>
                                <input type="password" placeholder="Password">
                                <!--Alternative phone-->
                            </div>
                        </div>
                        <!--Data Information-->
